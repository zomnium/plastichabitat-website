
.wysiwyg

  h1, h2, h3, h4, h5, h6
    font-family: font-serif
    font-weight: 400
    line-height: 1.5em

  h1, h2
    border-top: 0.06em solid color-border
    font-weight: 700
    margin-top: 2.4em
    padding-top: 1.8em

  h3, h4
    font-style: italic
    margin-top: 1.8em

  p
    margin: 0 0 1em

  code
    background-color: color-border
    padding: 0.3em 0.45em
    border-radius: 0.3em

  pre
    border-left: 0.50em solid color-border
    padding-left: 0.75em

    & code
      background: transparent
      padding: 0

  ol
    list-style-type: decimal-leading-zero
    padding-left: 1.8em

  ul
    list-style-type: circle
    padding-left: 1.2em

  hr
    border: none
    border-top: 0.09em solid color-border
    margin: 3em 0

  a
    border-bottom: 0.15em solid color-link
    color: inherit
    text-decoration: none
    -webkit-transition: all .3s ease-in
    -o-transition: all .3s ease-in
    transition: all .3s ease-in

    &:hover
      color: color-link
